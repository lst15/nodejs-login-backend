generator client {
  provider = "prisma-client-js"
  binaryTargets = ["windows"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model logins {
  uuid String @id @default(uuid())
  email String @db.VarChar(100)
  password String @db.VarChar(150)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  permissions loginsHasPermissions[] @relation("fk_login")

  @@map("Login")
  @@unique([email])
  @@unique([uuid])
}

model permissions {
  uuid String @id @default(uuid())
  name String @db.VarChar(20)
  createdAt DateTime @default(now())

  delegates loginsHasPermissions[] @relation("fk_permissions")
  
  @@map("Permission")
  @@unique([name])
}

model loginsHasPermissions {
  uuid String @id @default(uuid())
  
  login logins @relation("fk_login",fields: [uuid_login],references: [uuid])
  uuid_login String

  permission permissions @relation("fk_permissions",fields: [uuid_permission],references: [uuid])
  uuid_permission String

  createdAt DateTime @default(now())
  
  @@map("Login_has_Permission")
}